CC          =   gcc
NAME		= 	a.out
DNAME		=	b.out
SRC         =   main.c
DSRC        =   dmain.c
OBJ         =   $(SRC:%.c=%.o)
DOBJ        =   $(DSRC:%.c=%.o)
RM          =   rm -f
CFLAGS      =   -Iinclude
LDFLAGS     =   -Lbin -lasmlib
DLDFLAGS    =   -Wl,-rpath=bin -ldl

all         :   $(NAME)

$(NAME)     :   $(OBJ)
				$(CC) $(OBJ) $(LDFLAGS) -o $(NAME)

dyn			:	$(DOBJ)
				$(CC) $(DOBJ) $(DLDFLAGS) -o $(DNAME)

clean       :
				$(RM) $(OBJ)

fclean      :   clean
				$(RM) $(NAME)

re          :   fclean all

.PHONY      :   all clean fclean re

